<?xml version="1.0"?>
<screen name="login" description="Login Screen">
	<!-- The top level container for the home screen -->
	<panel name="login-container" class="login-form-container" description="" seq="1">
	
		<!-- The Navbar component -->	
		<panel name="content-panel" class="content clearfix" description="" seq="1">
			<heading-one name="login-heading" class="" value="Sign In" description="" seq="1"/>
			<form name="login-form" target="./" method="post" description="Login Form" seq="2">
				<panel name="login-fields" class="login-fields" description="" seq="1">
					<paragraph name="login-message" value="Sign in using your registered account:" description="" seq="1"></paragraph>
					<!-- <panel name="error-panel" class="alert alert-error" style="display:none;" description="display:none;" seq="2"></panel> -->
					<panel name="login-user-name-field" class="field" description="" seq="3">
						<text-field name="username" class="login username-field" description="Username" seq="1"></text-field>
					</panel>
					<panel name="login-password-field" class="field" description="" seq="4">
						<password-field name="password"  class="login password-field" description="Password" seq="1"></password-field>
					</panel>
					
					<panel name="login-actions" class="login-actions" description="" seq="5">
						<submit-button name="login-button"  class="button btn btn-warning btn-large" description="Login" seq="1">
							<event-handler name="click" handler="login.submitHandler" description="Login form submit handler"/>
						</submit-button>
						<!-- <button name="register-button"  class="button btn btn-warning btn-large" description="Register">Register</button> -->
					</panel>
				</panel>
			</form>
		</panel>
		
	</panel>
</screen>
