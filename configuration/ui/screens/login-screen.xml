<?xml version="1.0"?>
<screen name="login" description="Login Screen">
	<panel name="login-container" class="login-form-container" description="">
		<panel name="content-panel" class="content clearfix" description="">
			<heading-one name="login-heading" class="" value="Sign In" description=""/>
			<form name="login-form" target="./" method="post" description="Login Form">
				<panel name="login-fields" class="login-fields" description="" >
					<paragraph name="login-message" value="Sign in using your registered account:" description="" ></paragraph>
					<panel name="error-panel" class="alert alert-error" style="display:none;" description="display:none;"></panel>
					<panel name="login-user-name-field" class="field" description="">
						<text-field name="username" class="login username-field" description="Username"></text-field>
					</panel>
					<panel name="login-password-field" class="field" description="">
						<password-field name="password"  class="login password-field" description="Password"></password-field>
					</panel>
					
					<panel name="login-actions" class="login-actions" description="">
						<submit-button name="login-button"  class="button btn btn-warning btn-large" description="Login">Login</submit-button>
						<!-- <button name="register-button"  class="button btn btn-warning btn-large" description="Register">Register</button> -->
					</panel>
				</panel>
			</form>
		</panel>
	</panel>
</screen>
